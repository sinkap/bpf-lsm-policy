[Unit]
Description=BPF LSM Policy Loader
After=local-fs.target
Requires=local-fs.target
ConditionPathIsMountPoint=/sys/fs/bpf
DefaultDependencies=no

[Service]
Type=oneshot
RemainAfterExit=yes
# Path to the installed binary
PassEnvironment=BPF_LSM_POLICY_ENFORCE
ExecStart=/usr/local/sbin/bpf_lsm_policy_loader

[Install]
WantedBy=sysinit.target
